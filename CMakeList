cmake_minimum_required(VERSION 1.30)

set(VCPEG_TARGET_TRIRLET x64-windows)
include("C:\\Users\\User\\Desktop\\Google Test18ey18\\vcpkg\\scripts\\buildsystems")

project(gtest_program)

add_executable(program src/main.cpp)
include_directories(include)

enable_testing()
find_package(GTest CONFIG REQUIRED)

